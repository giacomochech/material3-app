<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.home.AddFragmentDialog"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    app:shapeAppearanceOverlay= "?attr/shapeAppearanceMediumComponent"
    android:background="@drawable/dialog_bg"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_marginBottom="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/data_button"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:text="Data"
                android:textSize="20dp"
                android:textStyle="bold"
                app:icon="@drawable/ic_twotone_edit_calendar_24"
                app:iconSize="25dp"
                android:textColor="?attr/colorOnPrimary"
                app:iconTint="?attr/colorOnPrimary"
                />


                <TextView
                    android:id="@+id/dataPiked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="21/05/2000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        app:cardCornerRadius="28dp"
        android:elevation="20dp"
        style="@style/Widget.Material3.CardView.Outlined"


        >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate2"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimento"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/AddNomeCibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:minHeight="48dp"
                android:hint="Nome" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KCal"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginRight="15dp"/>


            <EditText
                android:id="@+id/AddCalorieCibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"
                android:hint="10 Kcal" />
        </LinearLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/AddAnnullaBotton"
            android:layout_width="135dp"
            android:layout_height="75dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="?attr/colorTertiaryContainer"
            android:text="Annulla"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
                android:id="@+id/AddConfermaBotton"
                android:layout_width="135dp"
                android:layout_height="75dp"
                android:text="Aggiungi"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:backgroundTint="?attr/colorPrimary"
                />
        </LinearLayout>


</LinearLayout>